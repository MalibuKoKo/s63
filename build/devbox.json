{
    "$schema": "https://raw.githubusercontent.com/jetify-com/devbox/0.14.0/.schema/devbox.schema.json",
    "packages": [],
    "shell": {
      "init_hook": [
        "echo 'Welcome to devbox!' > /dev/null"
      ],
      "scripts": {
        "test": [
          "echo \"Error: no test specified\" && exit 1"
        ],
        "init": [
          "docker run --rm --privileged tonistiigi/binfmt --install all",
          "docker run --rm --platform linux/arm/v7 busybox uname -m",
          "docker buildx use s63||docker buildx create --name s63 --use",
          "docker buildx inspect --bootstrap --builder s63"
        ],
        "build": [
          "docker buildx build --platform linux/arm/v7 --cache-to=type=inline --cache-from=type=registry,ref=nicolas/s63:cache -t nicolas/s63:rpi3 --load ."
        ],
        "run": [
          "docker run -it --rm --platform linux/arm/v7 --entrypoint bash nicolas/s63:rpi3"
        ]
      }
    }
  }
  